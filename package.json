{
  "name": "mce-certification",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp -r public/* dist/ 2>/dev/null || true",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name=mce-certification",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.4",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
